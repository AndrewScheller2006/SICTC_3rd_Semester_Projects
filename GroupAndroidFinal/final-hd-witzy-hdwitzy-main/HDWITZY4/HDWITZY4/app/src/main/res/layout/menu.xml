<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="b">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="161dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Combos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#006346"
                android:text="Combos" />

            <Button
                android:id="@+id/Sandwiches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#006346"
                android:text="Sandwiches" />

            <Button
                android:id="@+id/HotDogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#006346"
                android:text="Hot Dogs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Chili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#006346"
                android:text="Chili" />

            <Button
                android:id="@+id/Specialties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#006346"
                android:text="Specialties" />

            <Button
                android:id="@+id/Salads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#006346"
                android:text="Salads" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <Button
            android:id="@+id/Combo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#006346"
            android:text="COMBO #1 - Cheeseburger, Fries and a Medium Drink - $5.50" />

        <Button
            android:id="@+id/Combo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#006346"
            android:text="COMBO #2 - Grilled Chicken Sandwich, Fries and a Medium Drink - $6.25" />

        <Button
            android:id="@+id/Combo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#006346"
            android:text="COMBO #3 - Double Ritz w/ Cheese, Fries and a Medium Drink - $6" />

        <Button
            android:id="@+id/Combo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#006346"
            android:text="COMBO #4 - Hot Dog, Fries and a Medium Drink - $4" />

        <Button
            android:id="@+id/Combo5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#006346"
            android:text="COMBO #6 - Double Ritz w/ Cheese, Fries, Cole Slaw and a Medium Drink - $6.50" />

        <Button
            android:id="@+id/Combo6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#006346"
            android:text="COMBO #7 - Hamburger, Fries, Medium Drink and a Scoop of Ice Cream - 5.75" />

        <Button
            android:id="@+id/Combo7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#006346"
            android:text="COMBO #8 - Choice of a Hamburger, Cheeseburger, Grilled Cheese or Hot Dog, Small Fry, Small Drink and a Junior Scoop of Ice Cream. - 5.25" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="271dp"
        android:layout_height="183dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger" />

</androidx.constraintlayout.widget.ConstraintLayout>